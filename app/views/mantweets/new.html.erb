<%= render "shared/header" %>

<% if @mantweet.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@mantweet.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @mantweet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-14">
        <%= form_for @mantweet do |f| %>
          <div class="field">
            <%= f.label :title, "スタイル名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "説明", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>